<div class="d-flex justify-content-center">
  <form action="/submitUser" method="post" class="w-100" style="max-width: 500px;">
    <h1 class="text-center mb-4">Sign Up</h1>

    <div class="form-group">
      <label for="nameInput">Name</label>
      <input name="name" type="text" class="form-control" id="nameInput" placeholder="Name">
    </div>

    <div class="form-group">
      <label for="usernameInput">Email address</label>
      <input name="username" type="text" class="form-control" id="usernameInput" placeholder="Email">
    </div>

    <div class="form-group">
      <label for="passwordInput">Password</label>
      <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Password">
    </div>

    <button class="btn btn-primary mt-3">Submit</button>
  </form>
</div>



